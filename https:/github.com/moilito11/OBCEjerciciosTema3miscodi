package obc.ejercicios.tema.pkg3;

/**
 *
 * @author MoiC
 */
public class coche {
    
    
   int nPuertas = 0; 
   
   
   public void incrementoPuertas (int incremento){
       
       this.nPuertas=incremento;
      
   }
}
